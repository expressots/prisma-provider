// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = ""
}

model Category {
  id   String @id @default(uuid())
  name String @default(uuid())
  post Post[]
}

model Post {
  id       String     @id @default(uuid())
  name     String     @default(uuid())
  category Category[]
  user     User       @relation("post_FK", fields: [postId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  postId   String     @unique
}

model Profile {
  id        Int    @id
  bio       String @unique
  user      User   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId String @unique
}

model User {
  id        String   @id
  email     String   @unique
  updatedAt DateTime @updatedAt
  profile   Profile?
  post      Post[]   @relation("post_FK")

  @@index([email])
}
