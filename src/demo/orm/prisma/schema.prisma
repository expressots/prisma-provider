// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = ""
}

model User {
  id Int @default(1) @map("_id")
  name String
  color Color
  role Role
  post Post[]
  money DateTime @db.Time(1)

  @@id([id, color, role])

  @@unique([color, role])
}

enum Color {
  RED
  GREEN
  BLUE
}

enum Role {
  ADMIN
}

model UserTeste {
  id    String  @id @default(uuid()) @map("_id")
  name  String
  color Color[]
  role  Role
  money Decimal @db.Decimal(10, 3)
}

model Post {
  id String @id
  title String
  content String
}
