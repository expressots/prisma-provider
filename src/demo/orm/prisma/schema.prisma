// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = ""
}

model Profile {
  id        Int    @id
  bio       String @unique
  user      User   @relation(fields: [profileId, emailId], references: [id, email], onDelete: Cascade)
  profileId String
  emailId   String

  @@unique([profileId, emailId])
}

model User {
  id        String   @id
  email     String   @unique
  updatedAt DateTime @updatedAt
  profile   Profile?
  post      Post?    @relation("post_FK")

  @@unique([id, email])
  @@index([email])
}

model Post {
  id     String @default(uuid()) @map("_id")
  name   String @default(uuid())
  user   User   @relation("post_FK", fields: [postId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  postId String @unique

  @@id([id, name])
}
